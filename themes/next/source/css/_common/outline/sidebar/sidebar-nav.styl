// Sidebar Navigation
.sidebar-nav {
  margin: 0;
  padding-bottom: 20px;
  padding-left: 0;

  li {
    border-bottom: 1px solid transparent;
    color: $sidebar-nav-color;
    cursor: pointer;
    display: inline-block;
    font-size: $font-size-small;

    &.sidebar-nav-overview {
      margin-left: 10px;
    }

    &:hover {
      color: $sidebar-nav-hover-color;
    }
  }

  .sidebar-nav-active {
    border-bottom-color: $sidebar-highlight;
    color: $sidebar-highlight;

    &:hover {
      color: $sidebar-highlight;
    }
  }
}

.sidebar-panel {
  display: none;
  overflow-x: hidden;
  overflow-y: auto;
}

.sidebar-panel-active {
  display: block;
}

.cat {
  position: absolute;
  height: 150px;
  width: 170px;
  //top: 510px;
  bottom: 50px;
  left: 80px;
  //margin-top: 100px;
}

.ear--left {
  left: -7%;
  border-radius: 70% 30% 0% 0% / 100% 100% 0% 0%;
  -webkit-transform: rotate(
    -15deg
  );
  transform: rotate(
    -15deg
  );

  &::before {
    right: 10%;
  }

  &::after {
    right: 10%;
    -webkit-transform: rotate(
      -45deg
    );
    transform: rotate(
      -45deg
    );
  }
}

.ear {
  position: absolute;
  top: -30%;
  height: 60%;
  width: 25%;
  background: #FF93D8;
  &::before {
    content: "";
    position: absolute;
    bottom: 24%;
    height: 10%;
    width: 5%;
    border-radius: 50%;
    background: #161616;
  }
  &::after {
    content: "";
    position: absolute;
    bottom: 24%;
    height: 10%;
    width: 5%;
    border-radius: 50%;
    background: #161616;
    -webkit-transform-origin: 50% 100%;
    transform-origin: 50% 100%;
  }
}

.ear--right {
  right: -7%;
  border-radius: 30% 70% 0% 0% / 100% 100% 0% 0%;
  -webkit-transform: rotate(
    15deg
  );
  transform: rotate(
    15deg
  );
  &::before{
    left: 10%;
  }
  &::after{
    left: 10%;
    -webkit-transform: rotate(
      45deg
    );
    transform: rotate(
      45deg
    );
  }
}

.face {
  position: absolute;
  height: 100%;
  width: 100%;
  background: #161616;
  border-radius: 50%;
}

.eye {
  position: absolute;
  top: 35%;
  height: 30%;
  width: 31%;
  background: #fff;
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  &::before {
    content: "";
    position: absolute;
    top: 60%;
    height: 10%;
    width: 15%;
    background: #fff;
    border-radius: 50%;
  }
  &::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 0;
    width: 100%;
    border-radius: 0 0 50% 50% / 0 0 40% 40%;
    background: #161616;
    -webkit-animation: blink 4s infinite ease-in;
    animation: blink 4s infinite ease-in;
  }
}

.eye--left {
  left: 0;
  &::before {
    right: -5%;
  }
  .eye-pupil {
    right: 30%;
    &::after {
      content: "";
      position: absolute;
      top: 30%;
      right: -5%;
      height: 20%;
      width: 35%;
      border-radius: 50%;
      background: #fff;
    }
  }
}

.eye--right {
  right: 0;
  &::before {
    left: -5%;
  }

  .eye-pupil {
    left: 30%;
    &::after {
      content: "";
      position: absolute;
      top: 30%;
      right: -5%;
      height: 20%;
      width: 35%;
      border-radius: 50%;
      background: #fff;
    }
  }
}
.eye-pupil {
  position: absolute;
  top: 25%;
  height: 50%;
  width: 50%;
  background: #161616;
  border-radius: 50%;
  -webkit-animation: look-around 4s infinite;
  animation: look-around 4s infinite;
}

.muzzle {
  position: absolute;
  top: 60%;
  left: 50%;
  height: 6%;
  width: 6%;
  background: #FFDDCF;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  border-radius: 50% 50% 50% 50% / 30% 30% 70% 70%;
}

.tongue {
  position: absolute;
  top: 80%;
  left: 50%;
  height: 10%;
  width: 10%;
  background: #FF8780;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  border-radius: 50% 50% 50% 50% / 30% 30% 70% 70%;
}

@-webkit-keyframes look-around {
  0% {
    -webkit-transform: translate(0);
    transform: translate(0);
  }
  5% {
    -webkit-transform: translate(30%, -25%);
    transform: translate(30%, -25%);
  }
  10% {
    -webkit-transform: translate(30%, -25%);
    transform: translate(30%, -25%);
  }
  15% {
    -webkit-transform: translate(-70%, -25%);
    transform: translate(-70%, -25%);
  }
  20% {
    -webkit-transform: translate(-70%, -25%);
    transform: translate(-70%, -25%);
  }
  25% {
    -webkit-transform: translate(0, 0);
    transform: translate(0, 0);
  }
  100% {
    -webkit-transform: translate(0, 0);
    transform: translate(0, 0);
  }
}
@keyframes look-around {
  0% {
    -webkit-transform: translate(0);
    transform: translate(0);
  }
  5% {
    -webkit-transform: translate(30%, -25%);
    transform: translate(30%, -25%);
  }
  10% {
    -webkit-transform: translate(30%, -25%);
    transform: translate(30%, -25%);
  }
  15% {
    -webkit-transform: translate(-70%, -25%);
    transform: translate(-70%, -25%);
  }
  20% {
    -webkit-transform: translate(-70%, -25%);
    transform: translate(-70%, -25%);
  }
  25% {
    -webkit-transform: translate(0, 0);
    transform: translate(0, 0);
  }
  100% {
    -webkit-transform: translate(0, 0);
    transform: translate(0, 0);
  }
}
@-webkit-keyframes blink {
  0% {
    height: 0;
  }
  90% {
    height: 0;
  }
  92.5% {
    height: 100%;
  }
  95% {
    height: 0;
  }
  97.5% {
    height: 100%;
  }
  100% {
    height: 0;
  }
}
@keyframes blink {
  0% {
    height: 0;
  }
  90% {
    height: 0;
  }
  92.5% {
    height: 100%;
  }
  95% {
    height: 0;
  }
  97.5% {
    height: 100%;
  }
  100% {
    height: 0;
  }
}
